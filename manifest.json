{
    "name": "YT no distractions",
    "description": "No distractions on YouTube.",
    "version": "1.1",
    "manifest_version": 3,
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/watch*"
            ],
            "run_at": "document_end",
            "js": [
                "./yt-no-distractions.js"
            ],
            "all_frames": true
        }
    ],
    "browser_specific_settings": {
        "gecko": {
          "id": "no-distractions-yt@corny.me"
        }
    }
}
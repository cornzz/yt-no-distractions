{
    "name": "YT no distractions",
    "description": "No distractions on YouTube.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/watch?v=*",
                "https://youtube.com/watch?v=*",
                "https://www.youtube.de/watch?v=*",
                "https://youtube.de/watch?v=*"
            ],
            "run_at": "document_end",
            "js": [
                "./yt-no-distractions.js"
            ],
            "all_frames": true
        }
    ],
    "browser_specific_settings": {
        "gecko": {
          "id": "yt-no-distractions@corny.me"
        }
    }
}